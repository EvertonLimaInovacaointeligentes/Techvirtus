<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prova TECHVIRTUS</title>
    <link rel="icon" href="~/Content/img/logoAba.png">
    <link rel="stylesheet" type="text/css" href="~/Content/css/Principal.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/menuAcordion.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/CabecalhoTabelas.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Home/Index" style="text-decoration:none;color:dimgrey;"><img src="~/Content/img/logo.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Logar", "Login", "Usuario")</li>                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="conteudo">
            @RenderBody()
        </div>
        
        <hr />
        <footer>
            <p>&copy; Prova TECHVIRTUS</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/menu.js" type="text/javascript"></script>
</body>

</html>
